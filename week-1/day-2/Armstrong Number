class Solution:
    def solve(self, A):
        num_str = str(A)
        num_digits = len(num_str)  
        
        sum_of_powers = 0
        for digit in num_str:
            sum_of_powers += int(digit) ** num_digits  
        
        if sum_of_powers == A:
            return 1 
        else:
            return 0 
